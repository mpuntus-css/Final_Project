@model Product

<h1>Add Product</h1>
<form method="post">
    <label for="Name">Name:</label>
    <input type="text" name="Name" id="Name" required />

    <label for="Price">Price:</label>
    <input type="number" name="Price" id="Price" step="0.01" required />

    <button type="submit">Add Product</button>
</form>

